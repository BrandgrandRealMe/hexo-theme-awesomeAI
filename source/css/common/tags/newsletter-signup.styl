// Mixins
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

// Styles
.newsletter-form
  background-color var(--background-color-2)
  color var(--text-color-3)
  padding 1rem
  border-radius(var(--box-border-radius))
  display flex
  flex-direction column
  gap 1rem

  .form-title
    font-size 2.25rem
    margin 1rem 0

  .form-group
    display flex
    flex-direction column

    #contact_email
      background-color var(--background-color-3)
      border-color var(--background-color-2)
      color var(--text-color-3)
      box-shadow 1px 2px 6px var(--shadow-color)
      padding 0.5rem
      border-radius(var(--box-border-radius))
      border-width 0px
      margin-top 0.25rem

  .captcha-container
    margin 1rem 0

  .button-container
    display flex
    justify-content flex-start

    .submit-button
      background-color var(--primary-color)
      color var(--text-color-6)
      padding 0.75rem 1.5rem
      border none
      border-radius(var(--box-border-radius))
      font-size 1rem
      font-weight bold
      cursor pointer

      &:hover
        background-color var(--primary-color-dark-1)

// Media query for larger screens
@media (min-width: 768px)
  .newsletter-form
    padding 2rem
