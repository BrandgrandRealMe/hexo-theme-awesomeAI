// Mixins
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

// Custom Audio Player Styles
.custom-audio-player
  background-color var(--background-color-2)
  border-radius border-radius(var(--box-border-radius))
  padding 20px
  max-width 400px
  margin 20px auto
  box-shadow 1px 2px 6px var(--shadow-color)
  color var(--text-color-3)

  h3
    margin-top 0
    margin-bottom 15px
    font-size 1.2em

  .progress-bar
    background-color var(--background-color-3)
    height 5px
    border-radius 5px
    margin-bottom 10px
    cursor pointer

    .progress
      background-color var(--primary-color)
      height 100%
      border-radius 5px
      width 0%
      transition width 0.1s linear

  .controls
    display flex
    align-items center
    justify-content space-between

    .play-pause, .mute
      background none
      border none
      color var(--primary-color)
      font-size 1.5em
      cursor pointer

    .time
      font-size 0.9em

    .volume-slider
      width 80px
      margin-left 10px
