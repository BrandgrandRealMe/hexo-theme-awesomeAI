.article-meta-info-container {
  color var(--text-color-4)

  &.post {
    font-size 0.8rem
  }


  &.home {
    display flex
    align-items center
    justify-content space-between
    font-size 0.88rem
  }


  a {
    color var(--text-color-4)

    &:hover {
      color var(--primary-color)
    }
  }


  i.icon {
    font-size 0.8rem
  }

  .article-meta-info {
    display flex
    flex-wrap wrap
    justify-content flex-start
    letter-spacing 0.6px

    .meta-info-item {
      display flex
      align-items center
      justify-content flex-start
      box-sizing border-box
      margin-right 0.6rem

      &:last-child {
        margin-right 0
      }

      ul
      li {
        display inline
      }
    }


    .article-date {

      .mobile {
        display none
      }

      +keep-tablet() {
        .pc {
          display none
        }

        .mobile {
          display inline
        }
      }
    }


    .article-update-date {
      +keep-tablet() {
        display none
      }
    }


    .article-category {
      .category-item {
        .category-separator {
          margin 0 0.05rem

          i.icon {
            font-size 0.6rem
          }
        }
      }

      +keep-mobile() {
        display none !important
      }
    }


    .article-tag {
      .tag-item {
        margin-right 0.1rem

        &:last-child {
          margin-right 0
        }

        .tag-separator {
          margin-right 0.1rem

          i.icon {
            font-size 0.6rem
          }
        }
      }

      +keep-tablet() {
        display none !important
      }
    }

    .article-min2read
    .article-wordcount {
      +keep-mobile() {
        display none
      }
    }

    .article-pv {
      display none
    }
  }


  .home-read-more {
    display flex
    align-items center
    justify-content space-between
    font-size 0.82rem

    i.fas {
      color var(--text-color-4)
      font-size 0.92rem
    }
  }
}
